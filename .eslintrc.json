{
  "env": {
    "es6": true,
    "node": true,
    "commonjs": true,
    "browser": false
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": "off",
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "require-jsdoc": "error",
    "valid-jsdoc": ["error", {"requireReturn": false}]
  }
}
